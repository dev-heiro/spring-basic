    <bean class="com.zaxxer.hikari.HikariDataSource" id="dataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
        <property name="jdbcUrl" value="jdbc:mysql://database.ch662qumapvg.ap-northeast-2.rds.amazonaws.com:3306/playground" />
        <property name="username" value="admin"/>
        <property name="password" value="1q2w3e4r"/>
    </bean>



    <bean class="org.apache.ibatis.session.Configuration" id="mybatisConfiguration">
        <property name="mapUnderscoreToCamelCase" value="true"/>
    </bean>

    <bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactory">
        <property name="dataSource" ref="dataSource"/>
        <property name="mapperLocations" value="/WEB-INF/mappers/*.xml"/>
        <property name="typeAliasesPackage" value="org.codenova.spring.model" />
        <property name="configuration" ref="mybatisConfiguration"/>
    </bean>

    <bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSessionTemplate">
        <constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory"/>
    </bean>

    <bean class="org.codenova.spring.aop.LoggingAspect" id="loggingAspect"/>

    <aop:config>
        <aop:aspect ref="loggingAspect">
            <aop:after-throwing method="log" pointcut="execution(* org.codenova.spring.controller..*(..))"/>
        </aop:aspect>
    </aop:config>

</beans>